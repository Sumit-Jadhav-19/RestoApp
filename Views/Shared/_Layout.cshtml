            @RenderBody()
        </main>

        @if (ViewContext.RouteData.Values["controller"].ToString().ToLower() == "captain" && ViewContext.RouteData.Values["action"].ToString().ToLower() == "tables")
        {
            <div class="occupied-containser">
                <div class="un-occupied bg-red"></div><div class="ms-2">Un-Occupied</div>
                <div class="occupied bg-green ms-4"></div><div class="ms-2">Occupied</div>
            </div>
        }
    </div>

    <div id="confirmationPopup" class="confirm-popup d-none">
        <div class="card popup-content">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="m-0 fs-4">
                    Are You Sure?
                </h2>
                <button type="button" class="btn-close" id="confirmationPopupClose"></button>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this record?</h3>
            </div>
            <div class="card-footer">
                <div class="popup-actions">
                    <button id="cancelBtn" class="btn btn-outline-light">Cancle</button>
                    <button id="confirmBtn" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div class="toast-container p-3" id="toastContainer">
    </div>

    <footer class="border-top footer text-muted d-none">
        <div class="container">
            &copy; 2024 - RestoApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if ((await AuthorizationService.AuthorizeAsync(User, "Permission_Captain")).Succeeded)
    {
        <script src="~/js/captainchat.js"></script>
    }
</body>
</html>
