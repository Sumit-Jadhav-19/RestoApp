@model RoleViewModel
<div class="p-3">
<div class="card">
    <div class="card-header bg-transparent">
        <div class="float-end">
            <button class="btn btn-primary" onclick="showModal('role-modal')"><i class="bi bi-plus-circle-fill"></i> Add New Role</button>
        </div>
    </div>
    <div class="card-body">
        <div class="w-100 overflow-auto">
            <table class="table table-hover" id="tbl-user-role">
                <thead>
                    <tr>
                        <th scope="col">Sr No</th>
                        <th scope="col">Role Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="role-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="card-header bg-transparent">
                <div class="d-flex align-items-center justify-content-between">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Roles</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
            <form id="role-form">
                <div class="modal-body">
                    <div class="d-flex flex-column gap-3">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <input type="hidden" id="role-id" />
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/userroles.js"></script>