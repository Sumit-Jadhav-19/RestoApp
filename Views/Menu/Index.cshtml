@model MenuViewModel
<div class="p-3">
    <div class="card">
        <div class="card-header bg-transparent">
            <div class="float-end">
                <button class="btn btn-primary" onclick="showMenuModal()"><i class="bi bi-plus-circle-fill"></i> Add New Menu</button>
            </div>
        </div>
        <div class="card-body">
            <div class="w-100 overflow-auto">
                <table class="table table-hover" id="tbl-menu">
                    <thead>
                        <tr>
                            <th scope="col">Sr No</th>
                            <th scope="col">Menu</th>
                            <th scope="col">Description</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col">Half Available</th>
                            <th scope="col">Half Price</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Image Path</th>
                            <th scope="col">Is Available</th>
                            <th scope="col">Preparation Time</th>
                            <th scope="col">Is Special</th>
                            <th scope="col">Created By</th>
                            <th scope="col">Created On</th>
                            <th scope="col">Modified By</th>
                            <th scope="col">Modified On</th>
                            <th scope="col">Is Active</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="menu-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="card-header bg-transparent">
                <div class="d-flex align-items-center justify-content-between">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Menu Categories</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
            <form id="menu-form" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="d-flex flex-column gap-3">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="IsHalfAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsHalfAvailable"></label>
                            <span asp-validation-for="IsHalfAvailable" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HalfPrice"></label>
                            <input asp-for="HalfPrice" class="form-control" />
                            <span asp-validation-for="HalfPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFile"></label>
                            <input asp-for="ImageFile" class="form-control" type="file" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <div>
                            <h6>Image Preview :</h6>
                            <img id="filePreview" src="" alt="No file selected" style="max-width: 200px; max-height:200px; display:none;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Discount"></label>
                            <input asp-for="Discount" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAvailable"></label>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PreparationTime"></label>
                            <input asp-for="PreparationTime" class="form-control" />
                            <span asp-validation-for="PreparationTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="IsSpecial" class="form-check-input" type="checkbox" />
                            <label asp-for="IsSpecial"></label>
                            <span asp-validation-for="IsSpecial" class="text-danger"></span>
                        </div>
                        <input type="hidden" id="menu-id" />
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="menu-image-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="card-header bg-transparent">
                <div class="d-flex align-items-center justify-content-between">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Menu Image Preview</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
            <div class="modal-body">
                <div>
                    <img id="menu-Image-Preview" src="" alt="No file selected" style="width:100%; display:none;" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/menu.js"></script>